<div class='container'>
	<h1 align='center'>Register new user</h1>

	<div class='row'>
		<div class='col-xs-12'>
			<%= form_for(@user, :html => {class: 'form-horizontal', role: 'form'}) do |f| %>
			<div class='form-group'>
				<div class="col-sm-2">
					<%= f.label :email %>
				</div>
				<div class='col-sm-6'>
					<%= f.text_field :email, class:  "form-control", placeholder: "Your email"%>
				</div>
			</div>
			<div class='form-group'>
				<div class="col-sm-2">
					<%= f.label :password %>
				</div>
				<div class='col-sm-6'>
					<%= f.text_field :password, class:  "form-control", placeholder: "Your password"%>
				</div>
			</div>	
			<div class='form-group'>
				<div class='col-sm-10'>
					<%= f.submit class: 'btn btn-primary btn-lg' %>
				</div>
			</div>
			<% end %>	
		</div>
	</div>
</div>	
	<% end %>
	<% end %>
</ul>	
<div class="col-xs-12"></div>
	<%= render 'layouts/category_form' %>
	<div class="col-xs-4 col-xs-offset-4">
		[<%= link_to "Cancel request and return to category listing", categories_path %>]
	</div>
</div>

<div class="row">
	<div class="col-xs-12"></div>
	<%= form_for(@book, :html => {class: "form-horizontal", role: "form"}) do |f| %>
		<div class="form-group">
			<div class="control-label col-sm-2">
				<%= f.label :title %>
			</div>
			<div class="col-sm-8">
				<%= f.text_field :title, class: "form-control", placeholder: "Book title", autofocus: true %>			
			</div>			
		</div>

		<div class="form-group">
			<div class="control-label col-sm-2 control-label">
				<%= f.label :description %>
			</div>
			<div class="col-sm-8">
				<%= f.text_area :description,rows: 4, class: "form-control", placeholder: "Write a description about this book" %>			
			</div>			
		</div>
		<div class="form-group">
			<div class="control-label col-sm-2 control-label">
				<%= f.label :price %>
			</div>
			<div class="col-sm-8">
				<%= f.text_field :price, class: "form-control", placeholder: "Price" %>			
			</div>			
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb|%>
				  <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
				<% end %>
			</div>
		</div>		
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<%= f.submit class: "btn btn-primary btn-lg" %>
			</div>
		</div>	

		
	<% end %>
	<div class="col-xs-4 col-xs-offset-4">
		[<%= link_to "Cancel request and return to books listing", root_path %>]
	</div>
		
</div>
